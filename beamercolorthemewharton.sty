\mode<presentation>

% Wharton theme colors
\definecolor{UniRed}{RGB}{169,5,51}
\definecolor{UniWhite}{RGB}{255,255,255}
\definecolor{UniBlue}{RGB}{0,71,133}
\definecolor{UniBlack}{RGB}{0,0,0}
\definecolor{BayBlue}{RGB}{127.5,163,194}
\definecolor{HeritageRed}{RGB}{212,130,153}
\definecolor{MarineGray}{RGB}{127.5,127.5,127.5}


% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=black,bg=gray}
\setbeamercolor*{author}{fg=black,bg=gray}
\setbeamercolor*{date}{fg=black,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{framesubtitle}{fg=white}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=BayBlue!30,fg=black}
\setbeamercolor{block title alerted}{bg=HeritageRed!30,fg=black}
\setbeamercolor{block title example}{bg=MarineGray!30,fg=black}
\setbeamercolor{block body}{bg=BayBlue!5,fg=black}
\setbeamercolor{block body alerted}{bg=HeritageRed!5,fg=black}
\setbeamercolor{block body example}{bg=MarineGray!5,fg=black}

% Lists
\setbeamercolor*{item}{fg=UniRed}
% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=BayBlue!5}
% Verse
\setbeamercolor*{verse}{fg=black,bg=BayBlue!5}
% Abstract
\setbeamercolor*{abstract}{fg=black,bg=BayBlue!5}
% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}


\mode
<all>